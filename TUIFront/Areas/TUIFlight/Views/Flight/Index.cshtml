@model List<TUIFront.Areas.TUIFlight.Models.FlightModel>
@{
    ViewBag.Title = "Index";
}

<h2 class="title_form">Flight List</h2>


<div class="ibox-title">
    <h5></h5>
    <div class="ibox-tools">
        <button type="button" onclick="location.href = '@Url.Action("AddFlight", "Flight")'" class="btn btn-primary" data-toggle="modal">
            Add Flight
        </button>

    </div>
</div>


<div class="ibox-content">
    <table id="tablecontact" class="table table-striped table-bordered table-hover dataTables-example">
        <thead>
            <tr>
                <th>Departure airport</th>
                <th>Destination airport</th>
                <th>Flight distance</th>
                <th>Aircraft fuel consumption</th>
                <th>Flight time</th>
                <th>TakeOff effort</th>
                <th>Fuel needed</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @item.Airport.AirportName
                    </td>
                    <td>
                        @item.Airport1.AirportName
                    </td>
                    <td>
                        @item.FlightDistance.ToString("0.#####")
                    </td>
                    <td>
                        @item.AirCratfFuelComsumpDistance.ToString("0.#####")
                    </td>
                    <td>
                        @item.FlightTime.ToString("0.#####")
                    </td>
                    <td>
                        @item.TakeOffEffort.ToString("0.#####")
                    </td>
                    <td>
                        @item.FuelNeeded.ToString("0.#####")
                    </td>
                    <td>
                        <button type="button" onclick="location.href = '@Url.Action("UpdateFlight", "Flight", new { id = item.Id })'" class="btn btn-primary" data-toggle="modal">
                            Modifier
                        </button>

                        <button type="button" onclick="location.href = '@Url.Action("DetailFlight", "Flight", new { id = item.Id })'" class="btn btn-primary" data-toggle="modal" data-target="#myModalDelete">
                            Détail
                        </button>
                    </td>
                </tr>

            }
        <tbody>
    </table>
</div>

@section Styles {
    
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")   

}




@section Scripts {
@Scripts.Render("~/plugins/dataTables")
    <script type="text/javascript">
        $(document).ready(function () {
            ;
        });
    </script>
}

